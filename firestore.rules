rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to uploads collection for development
    match /uploads/{document} {
      allow read, write: if true;
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if true;
    }
  }
}